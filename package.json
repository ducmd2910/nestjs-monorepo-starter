{
  "name": "nest-mono-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "useWorkspaces": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "tools/*"
  ],
  "author": "",
  "homepage": "",
  "repository": "",
  "engines": {
    "node": ">=14 <=16"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "build": "yarn build:notification-service && yarn build:auth-service",
    "build:notification-service": "nest build @app/notification-service",
    "build:auth-service": "nest build @app/auth-service",
    "infra:local": "docker-compose -f docker-compose-local.yml up --build",
    "monorepo:install": "yarn && yarn workspace @tools/eslint.config install && yarn workspace @libs/modules install && yarn workspace @libs/utils install && yarn workspace @libs/core install && yarn workspace @app/auth.api install && yarn workspace @app/notification.service install",
    "format": "prettier --write \"apps/**/*.{ts, js, json}\" \"libs/**/*.{ts, js, json}\" ",
    "lint": "yarn format && eslint \"apps/**/*.{ts, js, json}\" \"libs/**/*.{ts, js, json}\" --fix",
    "test": "jest --detectOpenHandles --maxWorkers=50%",
    "test:e2e": "jest --config ./jest.config.e2e.ts --maxWorkers=50%",
    "test:coverage": "jest --coverage --detectOpenHandles --maxWorkers=50%",
    "commit": "cz",
    "start:auth-service:dev": "nest start @app/auth-service --debug --watch",
    "start:notification-service:dev": "nest start @app/notification-service --debug --watch",
    "start:checkout-service:prd": "node dist/apps/checkout-service/main.js",
    "start:auth-service:prd": "node dist/apps/auth-service/main.js",
    "start:notification-service:prd": "node dist/apps/notification-service/main.js",
    "add:module": "monorepo-nestjs-cli --module",
    "add:test": "monorepo-nestjs-cli --test",
    "add:app": "monorepo-nestjs-cli --app",
    "make-badges": "istanbul-badges-readme"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.11",
    "@nestjs/core": "^9.0.11",
    "@nestjs/microservices": "9.0.11",
    "@nestjs/platform-express": "^9.0.11",
    "@nestjs/swagger": "^6.1.2",
    "@nestjs/typeorm": "^9.0.1",
    "@types/amqplib": "^0.10.1",
    "amqp-connection-manager": "^4.1.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "colorette": "^2.0.19",
    "luxon": "^2.4.0",
    "moment": "^2.29.4",
    "nestjs-paginate": "^4.14.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.11",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@nestjs/cli": "^9.1.3",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.0.11",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.3",
    "@types/luxon": "^3.0.1",
    "@types/node": "^18.7.18",
    "@types/request-ip": "^0.0.37",
    "@types/supertest": "^2.0.12",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "istanbul-badges-readme": "^1.8.2",
    "jest": "^27.5.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "license": "MIT"
}
